<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".activitys.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button android:id="@+id/to_view_pager" android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="viewPager1"/>


    <Button android:id="@+id/send_btn" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="发送数据"/>

    <Button android:id="@+id/stop" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="STOP"/>
</LinearLayout>